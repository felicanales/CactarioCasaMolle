{
    "name": "cactario-casa-molle",
    "version": "1.0.0",
    "description": "Sistema de gestiÃ³n de cactÃ¡ceas - Casa Molle",
    "private": true,
    "scripts": {
        "build": "npm run build:nextjs",
        "build:nextjs": "cd nextjs && npm install && npm run build",
        "dev": "npm run dev:nextjs",
        "dev:nextjs": "cd nextjs && npm run dev -- -p 3001",
        "start": "npm run start:all",
        "start:all": "concurrently \"npm run start:fastapi\" \"npm run start:nextjs\"",
        "start:nextjs": "cd nextjs && npm start -- -p 3001",
        "start:fastapi": "cd fastapi && pip install -r requirements.txt && uvicorn app.main:app --host 0.0.0.0 --port 8000",
        "install:nextjs": "cd nextjs && npm install",
        "install:fastapi": "cd fastapi && pip install -r requirements.txt"
    },
    "workspaces": [
        "nextjs"
    ],
    "engines": {
        "node": ">=18.0.0",
        "python": ">=3.9.0"
    },
    "dependencies": {
        "concurrently": "^8.2.2",
        "critters": "^0.0.25"
    }
}
